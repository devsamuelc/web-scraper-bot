generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // Use UUID v4 for the primary key
  name      String
  phone     String? // Nullable
  chatId    Int     @unique
  queries   String[] // Array of strings
  websites  String[] // Array of strings
  schedules String[] // Array of strings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? // Nullable (soft delete)

  @@map("users")
}